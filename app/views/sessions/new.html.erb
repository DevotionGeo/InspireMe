<h1>Log in</h1>

<%= form_tag sessions_path do %>
    <div class="form-horizontal">
        <div class="control-group">
          <%= label_tag :displayname,"Display Name", :class=>"control-label" %>
          <%= text_field_tag :displayname, params[:displayname], :class=>"controls"  %>
        </div>
        <div class="control-group">
          <%= label_tag :password,nil, :class=>"control-label" %>
          <%= password_field_tag :password,nil, :class=>"controls"  %>
        </div>

        <div class="control-group">
        <%= label_tag :remember_me,nil, :class=>"control-label" %>
        <%= check_box_tag :remember_me, 1, params[:remember_me], :class=>"controls" %>
          </div>
      <div class="control-group">
        <%= link_to "Forgotten Password?", new_password_reset_path, :class=> "btn btn-info btn-medium"%>
      </div>
        <div class="actions"><%= submit_tag "Log in", :class=> "btn btn-success btn-medium" %></div>
    </div>
<% end %>